#!/usr/bin/python3

import os

os.chdir("data/kraken-actions/")
os.system("./merge_action_strings")
os.chdir("../..")

DOMAIN = "kraken"
PATH = "/usr/share/locale"

import os, gettext, sys
from mintcommon import additionalfiles

os.environ['LANGUAGE'] = "en_US.UTF-8"
gettext.install(DOMAIN, PATH)

prefix = """[Desktop Entry]
"""

suffix = """Exec=kraken %U
Icon=system-file-manager
# Translators: these are keywords of the file manager
Keywords=folders;filesystem;explorer;
Terminal=false
Type=Application
StartupNotify=false
Categories=GNOME;GTK;Utility;Core;
MimeType=inode/directory;application/x-gnome-saved-search;
Actions=open-home;open-computer;open-trash;
"""

additionalfiles.generate(DOMAIN, PATH, "data/kraken.desktop.in", prefix, _("Files"), _("Access and organize files"), suffix)


prefix = """
[Desktop Action open-home]
"""
suffix = """Exec=kraken %U
"""
additionalfiles.generate(DOMAIN, PATH, "data/kraken.desktop.in", prefix, _("Home"), None, suffix, append=True)

prefix = """
[Desktop Action open-computer]
"""
suffix = """Exec=kraken computer:///
"""
additionalfiles.generate(DOMAIN, PATH, "data/kraken.desktop.in", prefix, _("Computer"), None, suffix, append=True)

prefix = """
[Desktop Action open-trash]
"""
suffix = """Exec=kraken trash:///
"""
additionalfiles.generate(DOMAIN, PATH, "data/kraken.desktop.in", prefix, _("Trash"), None, suffix, append=True)
